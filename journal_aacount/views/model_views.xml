<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_account_journal_analytic_form_inherit" model="ir.ui.view">
    <field name="name">account.journal.analytic.form</field>
    <field name="model">account.journal</field>
    <field name="inherit_id" ref="account.view_account_journal_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/sheet/notebook/page[@name='advanced_settings']/group"
	     position="inside">
	<group string="Analytic Configurations">
          <field name="analytic_account_id" string="Analytic Account"/>
        </group>
      </xpath>
    </field>
  </record>

  <record id="view_pos_config_form_inherit" model="ir.ui.view">
    <field name="name">config.form.inherits.view</field>
    <field name="model">pos.config</field>
    <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/sheet/div[@id='title']" position="after">
        <h2>Related Users</h2>
        <div class="row mt16 o_settings_container" id="users_relationship1">
          <div class="col-12 col-lg-6 o_setting_box"
	       title="Add the users who could see this Point of Sale.">
            <div class="o_setting_right_pane">
              <label for="test_field" string="Users Relationships"/>
              <div class="text-muted">
                Operation type used to record product pickings
              </div>
              <div class="content-group mt16">
		<field name="related_user_ids" string="Related Users"
		       widget="many2many_tags"/>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>


